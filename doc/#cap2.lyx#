\begin_layout Section
Hacia DL
\end_layout

\begin_layout Standard
Nos enfocaremos por ahora en la lógica 
\begin_inset Formula $\mathcal{ALC}$
\end_inset

:
\end_layout

\begin_layout Itemize
En vez de 
\begin_inset Formula $p_{i}$
\end_inset

 escribiremos 
\begin_inset Formula $C_{i}$
\end_inset


\end_layout

\begin_layout Itemize
En vez de 
\begin_inset Formula $\varphi\lor\psi$
\end_inset

 escribiremos 
\begin_inset Formula $\varphi\sqcup\psi$
\end_inset


\end_layout

\begin_layout Itemize
En vez de 
\begin_inset Formula $\langle R\rangle\varphi$
\end_inset

 escribiremos 
\begin_inset Formula $\exists R.\varphi$
\end_inset


\end_layout

\begin_layout Subsection
Extensión de una fórmula 
\begin_inset Formula $\varphi$
\end_inset

 en 
\begin_inset Formula $\mathcal{M}$
\end_inset

 (
\begin_inset Formula $\parallel\varphi\parallel^{\mathcal{M}}$
\end_inset

)
\end_layout

\begin_layout Standard
Analizaremos una fórmula de Lógica Modal 
\begin_inset Formula $\varphi$
\end_inset

 recursivamente:
\end_layout

\begin_layout Itemize
\begin_inset Formula $\parallel p\parallel^{\mathcal{M}}=\{w\mid w\in\mathcal{I}(p)\}$
\end_inset

, o sea, 
\begin_inset Formula $\parallel p\parallel^{\mathcal{M}}=\mathcal{I}(p)$
\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $\parallel\neg\varphi\parallel^{\mathcal{M}}=\varDelta\setminus\parallel\varphi\parallel^{\mathcal{M}}$
\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $\parallel\varphi\lor\psi\parallel^{\mathcal{M}}=\parallel\varphi\parallel^{\mathcal{M}}\cup\parallel\psi\parallel^{\mathcal{M}}$
\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $\parallel\langle R\rangle\varphi\parallel^{\mathcal{M}}=\{w\mid\exists v.R(w,v)\land v\in\parallel\varphi\parallel^{\mathcal{M}}\}$
\end_inset


\end_layout

\begin_layout Standard
\begin_inset Separator plain
\end_inset


\end_layout

\begin_layout Standard
Sea 
\begin_inset Formula $\mathcal{M=\langle\varDelta},\mathcal{I\rangle}$
\end_inset

, con 
\begin_inset Formula $\varDelta$
\end_inset

 un conjunto no vacío y 
\begin_inset Formula $\mathcal{I}$
\end_inset

 una función de interpretación, decimos que:
\end_layout

