\begin_layout Subsection
Nexo Semántico
\end_layout

\begin_layout Standard
Tomaremos los modelos de 
\begin_inset Formula $\mathcal{ML}$
\end_inset

, o sea, grafos dirigidos y etiquetados.
\end_layout

\begin_layout Subsubsection
Extensión de una fórmula 
\begin_inset Formula $\varphi$
\end_inset


\end_layout

\begin_layout Standard
(
\begin_inset Formula $\mathcal{ML}$
\end_inset

) Sea 
\begin_inset Formula $\mathcal{M}=\langle\mathcal{I},\Delta\rangle$
\end_inset

 un modelo de 
\begin_inset Formula $\mathcal{ML}$
\end_inset

, analizaremos la extensión de una fórmula 
\begin_inset Formula $\varphi$
\end_inset

 (
\begin_inset Formula $\parallel\varphi\parallel^{\mathcal{M}}$
\end_inset

) recursivamente de la siguiente manera:
\end_layout

\begin_layout Itemize
\begin_inset Formula $\parallel p\parallel^{\mathcal{M}}=\{w\mid w\in\mathcal{I}(p)\}$
\end_inset

, o sea, 
\begin_inset Formula $\parallel p\parallel^{\mathcal{M}}=\mathcal{I}(p)$
\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $\parallel\neg\varphi\parallel^{\mathcal{M}}=\varDelta\setminus\parallel\varphi\parallel^{\mathcal{M}}$
\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $\parallel\varphi\lor\psi\parallel^{\mathcal{M}}=\parallel\varphi\parallel^{\mathcal{M}}\cup\parallel\psi\parallel^{\mathcal{M}}$
\end_inset


\end_layout

\begin_layout Itemize
\begin_inset Formula $\parallel\langle R\rangle\varphi\parallel^{\mathcal{M}}=\{w\mid\exists v.R(w,v)\land v\in\parallel\varphi\parallel^{\mathcal{M}}\}$
\end_inset


\end_layout

\begin_layout Standard
(
\begin_inset Formula $\mathcal{DL}$
\end_inset

) Sea 
\begin_inset Formula $\mathcal{M=\langle\varDelta},\mathcal{I\rangle}$
\end_inset

, con 
\begin_inset Formula $\varDelta$
\end_inset

 un conjunto no vacío e 
\begin_inset Formula $\mathcal{I}$
\end_inset

 una función de interpretación, decimos que:
\end_layout

